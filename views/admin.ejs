<!-- views/admin.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - Update Scores</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Update Team Scores</h1>
  <div class="teams-container">
    <!-- Team A -->
    <div class="team">
      <h2>Team A: <span id="score-teamA"><%= scores.teamA %></span></h2>
      <button onclick="updateScore('teamA', 1)">+1</button>
      <button onclick="updateScore('teamA', -1)">-1</button>
    </div>
    <!-- Team B -->
    <div class="team">
      <h2>Team B: <span id="score-teamB"><%= scores.teamB %></span></h2>
      <button onclick="updateScore('teamB', 1)">+1</button>
      <button onclick="updateScore('teamB', -1)">-1</button>
    </div>
    <!-- Team C -->
    <div class="team">
      <h2>Team C: <span id="score-teamC"><%= scores.teamC %></span></h2>
      <button onclick="updateScore('teamC', 1)">+1</button>
      <button onclick="updateScore('teamC', -1)">-1</button>
    </div>
  </div>

  <script>
    function updateScore(team, delta) {
      fetch('/update-score', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ team, delta })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          document.getElementById(`score-${team}`).innerText = data.newScore;
        } else {
          alert('Error updating score');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('An error occurred while updating the score.');
      });
    }
  </script>
</body>
</html>
