<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Quiz Scores</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Current Team Scores</h1>
  <div class="teams-container">
    <div class="team">
      <h2>Team A: <span id="teamA"><%= scores.teamA %></span></h2>
    </div>
    <div class="team">
      <h2>Team B: <span id="teamB"><%= scores.teamB %></span></h2>
    </div>
    <div class="team">
      <h2>Team C: <span id="teamC"><%= scores.teamC %></span></h2>
    </div>
  </div>

  <script>
    // Function to fetch the latest scores and update the DOM
    function fetchScores() {
      fetch('/scores') // Endpoint to get the latest scores
        .then(response => response.json())
        .then(data => {
          document.getElementById('teamA').innerText = data.teamA;
          document.getElementById('teamB').innerText = data.teamB;
          document.getElementById('teamC').innerText = data.teamC;
        })
        .catch(error => console.error('Error fetching scores:', error));
    }

    // Fetch scores every 5 seconds
    setInterval(fetchScores, 5000);
  </script>
</body>
</html>
